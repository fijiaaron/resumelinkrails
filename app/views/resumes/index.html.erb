<h1>Listing resumes</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Format</th>
      <th>Generated by</th>
      <th>Is approved</th>
      <th>Is flagged</th>
      <th>Is current</th>
      <th>Version</th>
      <th>User</th>
      <th>Profile</th>
      <th>Is deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.filename %></td>
        <td><%= resume.format %></td>
        <td><%= resume.generated_by %></td>
        <td><%= resume.is_approved %></td>
        <td><%= resume.is_flagged %></td>
        <td><%= resume.is_current %></td>
        <td><%= resume.version %></td>
        <td><%= resume.user %></td>
        <td><%= resume.profile %></td>
        <td><%= resume.is_deleted %></td>
        <td><%= link_to 'Show', resume %></td>
        <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
        <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resume', new_resume_path %>
