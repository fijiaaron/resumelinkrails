<h1>Listing telephones</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Non us number</th>
      <th>Profile</th>
      <th>Type</th>
      <th>Do not call</th>
      <th>Do not display</th>
      <th>Contact</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @telephones.each do |telephone| %>
      <tr>
        <td><%= telephone.number %></td>
        <td><%= telephone.non_us_number %></td>
        <td><%= telephone.profile %></td>
        <td><%= telephone.type %></td>
        <td><%= telephone.do_not_call %></td>
        <td><%= telephone.do_not_display %></td>
        <td><%= telephone.contact %></td>
        <td><%= telephone.user %></td>
        <td><%= link_to 'Show', telephone %></td>
        <td><%= link_to 'Edit', edit_telephone_path(telephone) %></td>
        <td><%= link_to 'Destroy', telephone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Telephone', new_telephone_path %>
