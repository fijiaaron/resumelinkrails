<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zip</th>
      <th>Non us state province region</th>
      <th>Non us postal code</th>
      <th>Profile</th>
      <th>Contact</th>
      <th>Type</th>
      <th>Do not locate</th>
      <th>Do not display</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.zip %></td>
        <td><%= address.non_us_state_province_region %></td>
        <td><%= address.non_us_postal_code %></td>
        <td><%= address.profile %></td>
        <td><%= address.contact %></td>
        <td><%= address.type %></td>
        <td><%= address.do_not_locate %></td>
        <td><%= address.do_not_display %></td>
        <td><%= address.user %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

